@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserWithWorkLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Çalıştığı Şube</th>
                        <th>Şehir</th>
                        <th>Ülke</th>
                        <th>Durum</th>
                        <th>Cinsiyet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                            <td>@item.WorkLocationName</td>
                            <td>
                                <span>@item.City</span>
                            </td>
                            <td>@item.Country</td>
                            <td><i class="fa fa-circle-o text-success  mr-2"></i>Aktif</td>
                            @if (@item.Gender == "Erkek")
                            {
                                <td><i class="fa fa-circle-o text-info mr-2"></i>Erkek</td>
                            }
                            @if (@item.Gender == "Kadın")
                            {
                                <td><i class="fa fa-circle-o text-warning mr-2"></i>Kadın</td>
                            }

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<a href="/Register/Index/" class="btn btn-outline-info">Yeni Kullanıcı Ekle</a>
