@model CreateSendMessage

@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="email-left-box">
    @await Html.PartialAsync("SideBarAdminContactPartial")
    @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="toolbar" role="toolbar">
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light">
                <i class="fa fa-archive"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-exclamation-circle"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-trash"></i>
            </button>
        </div>

    </div>
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" placeholder=" Alicı Mail Adresi" asp-for="ReceiverMail">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" placeholder="Konu" asp-for="Title">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" placeholder="Alıcı Adı Soyadı" asp-for="ReceiverName">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" rows="15" placeholder="Mesajınızı Yazınız..." asp-for="Content"></textarea>
            </div>
            <div class="text-left m-t-15">
                <button class="btn btn-info">Gönder</button>
            </div>
        </form>
    </div>
</div>


