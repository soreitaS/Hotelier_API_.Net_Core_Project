@model CreateGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-info"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-info"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-info"></span>
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Yeni Misafir Ekle</button>
</form>

